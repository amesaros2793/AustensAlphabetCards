<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JapaneseConfiguration">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/katakana_button"
            android:layout_width="128sp"
            android:layout_height="64sp"
            android:onClick="startFlashCardActivity"
            android:tag="JP_Katakana"
            android:text="@string/katakana_label"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="241dp" />

        <Button
            android:id="@+id/hiragana_button"
            android:layout_width="128sp"
            android:layout_height="64sp"
            android:onClick="startFlashCardActivity"
            android:tag="JP_Hiragana"
            android:text="@string/hiragana_label"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="345dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>